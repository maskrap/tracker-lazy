<%= form_for @show do |f| %>
 <%= f.label :name %>
 <%= f.text_field :name %>
 <%= f.label :description %>
 <%= f.text_field :description%>
 <%= f.label :TV, 'TV' %>
 <%= f.radio_button :media_type, 'TV'%>
 <%= f.label :Movie, 'Movie' %>
 <%= f.radio_button :media_type, 'Movie'%>
 <%= f.label :category %>
 <%= f.select :category, options_for_select(['', 'Drama', 'Comedy', 'Action', 'Documentary', 'Romance', 'Misc']), {}, {class: "form-control"} %>
 <%= f.submit "Add Show" %>
<%end%>
